<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:padding="16dp"
    android:background="@drawable/background_gradient">



    <ImageView
        android:id="@+id/topImageView"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@drawable/logo"
        android:contentDescription="Imagem no topo"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="24dp" />


    <Button
        android:id="@+id/bt_AddEstufa"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="100dp"
        android:backgroundTint="@color/black"
        android:onClick="bt_AddEstufa"
        android:text="Adicionar Estufa" />


    <Button
        android:id="@+id/bt_EstufasAtivas"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="16dp"
        android:backgroundTint="@color/black"
        android:onClick="bt_EstufasAtivas"
        android:text="Procurar Estufa" />


    <Button
        android:id="@+id/bt_voltarHomeS"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="150dp"
        android:backgroundTint="@color/red"
        android:onClick="bt_voltarHomeE"
        android:text="Voltar"
        android:textColor="@color/black" />

</LinearLayout>
